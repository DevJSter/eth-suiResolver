{
  "name": "cross-chain-safe-escrow",
  "version": "1.0.0",
  "description": "Cross-chain safe escrow system between Ethereum and Sui networks",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "relayer": "node src/relayer/index.js",
    "deploy:eth": "cd contracts/ethereum && forge script script/Deploy.s.sol --broadcast",
    "deploy:sui": "cd contracts/sui && sui client publish --gas-budget 100000000",
    "build:sui": "cd contracts/sui && sui move build",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "ethers": "^6.8.1",
    "@mysten/sui.js": "^0.45.1",
    "dotenv": "^16.3.1",
    "ws": "^8.14.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.5.1",
    "crypto": "^1.0.1",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "@types/node": "^20.8.7"
  },
  "keywords": [
    "cross-chain",
    "escrow",
    "ethereum",
    "sui",
    "htlc",
    "atomic-swap"
  ],
  "author": "meowGloball",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
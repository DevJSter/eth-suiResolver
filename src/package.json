{
  "name": "cross-chain-safe-escrow",
  "version": "1.0.0",
  "description": "Cross-chain safe escrow system between Ethereum and Sui networks",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "relayer": "node src/relayer/index.js",
    "test": "jest",
    "build:eth": "cd contracts/ethereum && forge build",
    "test:eth": "cd contracts/ethereum && forge test",
    "deploy:eth": "cd contracts/ethereum && forge script script/Deploy.s.sol --rpc-url $ETH_RPC_URL --private-key $PRIVATE_KEY --broadcast",
    "build:sui": "cd contracts/sui && sui move build",
    "deploy:sui": "cd contracts/sui && sui client publish --gas-budget 100000000"
  },
  "dependencies": {
    "ethers": "^6.8.0",
    "@mysten/sui.js": "^0.45.1",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "axios": "^1.5.0",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@types/node": "^20.8.0"
  },
  "keywords": [
    "cross-chain",
    "escrow",
    "ethereum",
    "sui",
    "htlc",
    "atomic-swap"
  ],
  "author": "Cross-Chain Safe Escrow Team",
  "license": "MIT"
}